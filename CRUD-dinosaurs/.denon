{
    "files": [
        "main.ts"
    ],
    "quiet": false,
    "debug": true,
    "fullscreen": true,
    "extensions": [
        ".ts"
    ],
    "interval": 500,
    "watch": [
        "."
    ],
    "deno_args": [
        "--allow-net",
        "--allow-read",
        "--config=tsconfig.json"
    ],
    "execute": {
        ".ts": [
            "deno",
            "run"
        ]
    },
    "fmt": false,
    "test": true
}